import os
import time
import pandas as pd
from faker import Faker
from watchdog.observers import Observer
from watchdog.events import FileSystemEventHandler
from datetime import datetime
from dotenv import load_dotenv
import random
from ftplib import FTP

load_dotenv()

INPUT_FOLDER = "./excel_drop"
OUTPUT_FOLDER = "./output_text"

os.makedirs(INPUT_FOLDER, exist_ok=True)
os.makedirs(OUTPUT_FOLDER, exist_ok=True)

faker = Faker()

def parse_excel(path):
    df = pd.read_excel(path, header=None)
    columns = df.iloc[0].tolist()
    types = df.iloc[1].tolist()
    return columns, types

def generate_fake_row(columns, types, date_format, start_year, end_year, fixed_lengths, entity_values):
    row = []
    for col, typ in zip(columns, types):
        col_lower = col.lower()
        typ_lower = typ.lower()
        value = None

        if "entity_prc" in col_lower and entity_values:
            value = random.choice(entity_values)

        elif "date" in typ_lower or "timestamp" in typ_lower:
            start_date = datetime(start_year, 1, 1)
            end_date = datetime(end_year, 12, 31)
            if "timestamp" in typ_lower:
                value = faker.date_time_between(start_date=start_date, end_date=end_date).strftime("%Y-%m-%d %H:%M:%S.%f")[:-3]
            else:
                value = faker.date_between(start_date=start_date, end_date=end_date).strftime(date_format)

        elif "name" in col_lower and "first" in col_lower:
            value = faker.first_name()
        elif "name" in col_lower and "last" in col_lower:
            value = faker.last_name()
        elif "name" in col_lower:
            value = faker.name()
        elif "age" in col_lower:
            value = faker.random_int(min=0, max=100)
        elif "email" in col_lower:
            value = faker.email()
        elif "phone" in col_lower or "tel" in col_lower:
            value = faker.phone_number()
        elif "address" in col_lower:
            value = faker.address().replace("\n", ", ")
        elif "city" in col_lower:
            value = faker.city()
        elif "country" in col_lower:
            value = faker.country()
        elif "company" in col_lower:
            value = faker.company()
        elif "int" in typ_lower or "smallint" in typ_lower or "bigint" in typ_lower:
            value = faker.random_int(min=0, max=99999)
        elif "float" in typ_lower or "decimal" in typ_lower:
            value = round(faker.pyfloat(left_digits=4, right_digits=2, positive=True), 2)
        elif "char" in typ_lower or "varchar" in typ_lower or "string" in typ_lower:
            value = faker.word()
        else:
            value = faker.word()

        if col in fixed_lengths and isinstance(value, str):
            length = fixed_lengths[col]
            value = value[:length].ljust(length)

        row.append(value)

    return row

def generate_unique_data(columns, types, count, date_format, start_year, end_year, pk_indices, fixed_lengths, entity_values):
    data = []
    seen_keys = set()
    attempts = 0
    max_attempts = count * 10

    while len(data) < count and attempts < max_attempts:
        row = generate_fake_row(columns, types, date_format, start_year, end_year, fixed_lengths, entity_values)
        key = tuple(row[i] for i in pk_indices)
        if key not in seen_keys:
            seen_keys.add(key)
            data.append(row)
        attempts += 1

    if len(data) < count:
        print(f"âš ï¸ Warning: Only generated {len(data)} unique rows out of requested {count}.")
    return data

def ftp_upload(local_file_path, remote_subfolder):
    ftp = FTP(os.getenv("FTP_HOST"))
    ftp.login(user=os.getenv("FTP_USER"), passwd=os.getenv("FTP_PASS"))
    if remote_subfolder:
        if remote_subfolder not in ftp.nlst():
            ftp.mkd(remote_subfolder)
        ftp.cwd(remote_subfolder)
    with open(local_file_path, 'rb') as file:
        ftp.storbinary(f'STOR {os.path.basename(local_file_path)}', file)
    ftp.quit()

class ExcelHandler(FileSystemEventHandler):
    def on_created(self, event):
        if not event.is_directory and event.src_path.endswith(".xlsx"):
            file_path = event.src_path
            print(f"ðŸ“¥ New Excel file detected: {file_path}")
            try:
                columns, types = parse_excel(file_path)
                print(f"Columns: {columns}")
                print(f"Types: {types}")

                num_rows = int(input("ðŸ”¢ How many rows of data should be generated? "))
                date_format = input("ðŸ“† What date format should be used? (e.g. %Y-%m-%d, %d/%m/%Y): ")
                delimiter = input("ðŸ”£ What character should be used as a delimiter between rows? (e.g. ',' or ';' or '|'): ")
                start_year = int(input("ðŸ“… Start year for date fields? "))
                end_year = int(input("ðŸ“… End year for date fields? "))

                print("ðŸ—ï¸ Columns:")
                for idx, name in enumerate(columns):
                    print(f"{idx}: {name}")
                pk_input = input("ðŸ”‘ Enter comma-separated column numbers that form the Primary Key (e.g., 0,2): ")
                pk_indices = [int(i.strip()) for i in pk_input.split(",") if i.strip().isdigit()]

                entity_values = []
                if any("entity_prc" in col.lower() for col in columns):
                    ev = input("ðŸ”¢ Enter comma-separated ENTITY_PRC values to randomize: ")
                    entity_values = [v.strip() for v in ev.split(",") if v.strip()]

                fixed_lengths = {}
                for col, typ in zip(columns, types):
                    if not any(t in typ.lower() for t in ["date", "timestamp"]):
                        length_input = input(f"ðŸ”  Fixed length for column '{col}' (or press Enter to skip): ")
                        if length_input.strip().isdigit():
                            fixed_lengths[col] = int(length_input)

                output_name = input("ðŸ“„ Output filename (without extension, press Enter to auto-generate): ")
                if not output_name.strip():
                    base = os.path.basename(file_path).replace(".xlsx", "_out")
                    output_name = base

                print("ðŸ¤– Generating data...")
                rows = generate_unique_data(columns, types, num_rows, date_format, start_year, end_year, pk_indices, fixed_lengths, entity_values)

                if not rows:
                    print("âŒ No data generated. Skipping file.")
                    return

                df = pd.DataFrame(rows, columns=columns)
                output_path = os.path.join(OUTPUT_FOLDER, output_name + ".txt")
                df.to_csv(output_path, index=False, sep=delimiter, lineterminator="\n")
                print(f"âœ… Data saved to {output_path}")

                if input("ðŸ“¤ Upload to FTP? (y/n): ").lower() == 'y':
                    subfolder = input("ðŸ“ FTP subfolder (press Enter to skip): ")
                    ftp_upload(output_path, subfolder.strip() or None)
                    print("âœ… File uploaded to FTP.")

            except Exception as e:
                print(f"âŒ Error processing file: {e}")

def main():
    print(f"ðŸ“‚ Watching folder: {INPUT_FOLDER}")
    observer = Observer()
    observer.schedule(ExcelHandler(), INPUT_FOLDER, recursive=False)
    observer.start()
    try:
        while True:
            time.sleep(1)
    except KeyboardInterrupt:
        observer.stop()
    observer.join()

if __name__ == "__main__":
    main()

